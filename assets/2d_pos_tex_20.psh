#version 330
layout(location = 0) in  vec4   vInPosition;
layout(location = 2) in  vec4   vInColor;

out vec4        vInterpColor;

uniform mat4    mWorldMatrix;
uniform mat4    mViewProj;
void main()
{
    vec4 worldPos = mWorldMatrix * vInPosition;
    gl_Position = mViewProj * worldPos;
    vInterpColor = vInColor;
}
